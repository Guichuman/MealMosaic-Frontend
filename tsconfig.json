{
    "compilerOptions": {
      "jsx": "react",
      "module": "commonjs",
      "target": "es6",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": [
        "./node_modules/@types",
        "./src/types"
      ]
    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }
  